<div class="tileContainer">
    <h1 class="title">Create blogpost</h1>
    <form action="/createBlogposts" method="post">
        <input type="hidden" name="_csrf" value="{{token}}">
        <div class="control">
            {{#each error}}
               <p class="help is-danger">{{this}}</p> 
            {{/each}}
            Title: <input required name="title" class="input" placeholder="Write the title here..."><br>
            Text: <textarea required name="postText" class="textarea" placeholder="Write your post here..."></textarea><br>
        </div>
        <div class="control">
            <button class="button is-link">Submit</button>
            <a href="/blogpost" class="button is-light">Cancel</a>
        </div>
    </form>
</div>
