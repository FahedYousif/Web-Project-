<div class="tileContainer">
  <h1 class="title">Frequently Asked Questions</h1>
  {{#each error}}
    <p class="help is-danger">{{this}}</p> 
  {{/each}}
  <form action="/searchFaq" method="GET">
    Search keyword:<input name="searchText" class="input" style="width: 300px; margin-bottom:5px" placeholder="search for something here...">
    Date:<input name="searchTime" class="input" style="width: 300px; margin-bottom:5px" placeholder='created before "yyyy-mm-dd"'>
    <button class="button is-dark" type="submit">
      <i class="fas fa-search"></i>
    </button>
  </form>
  <a href="createFaqs" class="button is-primary">Ask a question</a>
  {{#unless Faq.length}}
    <p>There is nothing here</p>
  {{/unless}}
  {{#each Faq}}
    <div class="tile is-ancestor is-vertical">
      <div class="tile is-parent">
        <div class="tile is-child box">
          <p>{{dateOfPost}}</p>
          <p class="title">{{title}}</p>
          <p>{{postText}}</p><br>
          <p class="has-text-success-dark is-italic has-text-weight-bold">{{comment}}</p>
          {{#if ../isLoggedIn}}
          <div class="level-right">
            <form action="/delete-faq/{{id}}" method="POST">
            <input type="hidden" name="_csrf" value="{{../token}}">
              <button class="button is-danger" type="submit">
                <i class="fas fa-trash-alt"></i>
              </button>
            </form>
            <form action="/update-faq/{{id}}" method="GET">
              <button class="button is-info" type="submit">
                <i class="fas fa-edit"></i>
              </button>
            </form>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  {{/each}}
  </div>